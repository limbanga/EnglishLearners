        android:src="@drawable/correct4"
        android:layout_height="290dp">

    </ImageView>
    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
